<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:prompt="@string/matrix_prompt"/>
    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dp"
        android:layout_marginLeft="135.5dp"
        android:id="@+id/matrixHeight" 
        android:hint="2"
        android:imeOptions="actionNext" />
    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matrixWidth"
        android:layout_marginLeft="179.0dp"
        android:layout_marginTop="80.0dp" 
        android:hint="3"
        android:imeOptions="actionNext" />
    <TextView
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView1"
        android:layout_marginLeft="164.0dp"
        android:layout_marginTop="93.0dp" />

    <GridLayout
        android:id="@+id/matrixGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_marginTop="152.5dp">
    </GridLayout>
    <Button
        android:text="create"
        android:layout_width="60.5dp"
        android:layout_height="31.5dp"
        android:id="@+id/createMatrixButton"
        android:layout_marginLeft="231.0dp"
        android:layout_marginTop="92.0dp"
        android:textSize="8dp" />
    <Button
        android:text="calculate"
        android:layout_width="72.0dp"
        android:layout_height="31.5dp"
        android:id="@+id/calculateButton"
        android:layout_marginLeft="291.0dp"
        android:layout_marginTop="92.0dp"
        android:textSize="8dp" />

    <Button
        android:text="ADD"
        android:layout_width="87.5dp"
        android:layout_height="47.5dp"
        android:id="@+id/addMatrixButton"
        android:layout_marginLeft="267.0dp"
        android:layout_marginTop="197.0dp"
        android:textSize="8dp" />

</RelativeLayout>