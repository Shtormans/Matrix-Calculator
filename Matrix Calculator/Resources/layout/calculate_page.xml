<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout2">
    <Spinner
        android:layout_width="121.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:prompt="@string/matrix_prompt"
        android:layout_marginTop="15.0dp" />
    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView1"
        android:layout_marginLeft="141.0dp"
        android:layout_marginTop="12.5dp" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_marginLeft="171.5dp"
        android:layout_marginTop="50.0dp" />
    <EditText
        android:hint="Equation"
        android:layout_width="216.0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/calculatorField"
        android:singleLine="true"
        android:layout_marginTop="0.0dp"
        android:layout_marginLeft="168.0dp"
        android:layout_marginBottom="1.0dp" />
    <Button
        android:text="Exit"
        android:layout_width="70.0dp"
        android:layout_height="32.5dp"
        android:id="@+id/buttonExit"
        android:layout_marginTop="68.5dp"
        android:textSize="10dp" />
    <GridLayout
        android:id="@+id/matrixGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:useDefaultMargins="true"
        android:layout_marginTop="197.0dp">
        <Button
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonClear" />
        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonEqual" />
        <Button
            android:text="←"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonClearCell" />
        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonDivide" />
        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber7" />
        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber8" />
        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber9" />
        <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonMultiply" />
        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber4" />
        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber5" />
        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber6" />
        <Button
            android:text="—"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonSubtract" />
        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber1" />
        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber2" />
        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber3" />
        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonAdd" />
        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonNumber0" />
        <Button
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonA" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonB" />
        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/matrixGrid"
            android:id="@+id/buttonC" />
    </GridLayout>

</RelativeLayout>